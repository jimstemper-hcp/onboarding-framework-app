# Anthropic API Key for the AI Chat Assistant
# Get your API key from https://console.anthropic.com/settings/keys
# Copy this file to .env.local and add your key
VITE_ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Confluence API Configuration (for spec document sync)
# Get your API token from https://id.atlassian.com/manage-profile/security/api-tokens
VITE_CONFLUENCE_BASE_URL=https://yourcompany.atlassian.net/wiki
VITE_CONFLUENCE_SPACE_KEY=SPECS
VITE_CONFLUENCE_API_TOKEN=your-api-token
VITE_CONFLUENCE_USER_EMAIL=your-email@company.com
VITE_CONFLUENCE_PARENT_PAGE_ID=123456789

# Housecall Pro API (for MCP tools)
# Get your API key from your HCP developer settings
HCP_API_KEY=your_api_key_here
HCP_API_BASE_URL=https://api.housecallpro.com
